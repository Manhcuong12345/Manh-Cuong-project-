{{!-- <h1>{{courses}}</h1>
 --}}

<div class="mt-4">
    <div class="row">
    {{!-- //Diem can lap duyet danh sach ra --}}
    {{#each courses}}

    <div class="col-sm-6 col-lg-4">
    <div class="card card-courses" style="width: 18rem;">
     {{!-- them duong dan slug --}}
    <a href="/courses/{{this.slug}}">
     <img class="card-img-top" name="img" src="/img/{{this.img}}" alt="Card image cap">
    </a>
    <div class="card-body">
        <a href="/courses/{{this.slug}}">
         <h5 class="card-title">{{this.name}}</h5>
        </a>
       
        <p class="card-text">{{this.desc}}</p>
        <a href="#" class="btn btn-primary">Đăng ký khóa</a>
    </div>
</div>
        </div>

    {{/each}}
    </div>
</div>