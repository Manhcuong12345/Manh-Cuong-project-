<div class="mt-4">
    {{!-- <div class="row"> --}}
        <h3>Đăng Khóa Học</h3>
<form method="post" action="/courses/store" enctype="multipart/form-data">

    <div class="form-group">
    <label for="name">Tên khóa học</label>
    <input type="name" class="form-control" id="name" placeholder="enter name" name="name">
    {{!-- <small id="emailHelp" class="form-text text-muted">We'll never share your course with anyone else.</small> --}}
  </div>

  <div class="form-group">
    <label for="desc">Thông tin khóa học</label>
    <input type="desc" class="form-control" id="desc" placeholder="enter course" name="desc">
    {{!-- <small id="emailHelp" class="form-text text-muted">We'll never share your course with anyone else.</small> --}}
  </div>


   <div class="form-group">
    <label for="videoId">Video khóa học</label>
    <input type="videoId" class="form-control" id="videoId" placeholder="enter video" name="videoId">
    {{!-- <small id="emailHelp" class="form-text text-muted">We'll never share your course with anyone else.</small> --}}
  </div>

   <div class="form-group">
    <label for="level">Level khóa học</label>
    <input type="level" class="form-control" id="level" placeholder="enter level" name="level">
    {{!-- <small id="emailHelp" class="form-text text-muted">We'll never share your course with anyone else.</small> --}}
  </div>

  <div class="form-group">
    <label for="file">Picture file</label>
    <input type="file" class="form-control" id="file" placeholder="enter level" name="img">
    {{!-- <small id="emailHelp" class="form-text text-muted">We'll never share your course with anyone else.</small> --}}
  </div>

  <button type="submit" class="btn btn-primary">Thêm thông tin</button>
</form>
